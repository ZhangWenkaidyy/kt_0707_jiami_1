<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TextInputEditText
        android:id="@+id/textInputEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="加密后的内容"
        android:textColor="#00ff00"
        android:textIsSelectable="true"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_Md5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Md5加密" />

    <Button
        android:id="@+id/btn_rsaEncrypt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rsaEncrypt" />

    <Button
        android:id="@+id/btn_rsaDecrypt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rsaDecrypt" />

    <Button
        android:id="@+id/btn_base64Encrypt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="base64Encrypt" />

    <Button
        android:id="@+id/btn_base64Decrypt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="base64Decrypt" />
<EditText
    android:id="@+id/editText"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="des 请输入key"/>

    <Button
        android:id="@+id/btn_desEncrypt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="desEncrypt" />

    <Button
        android:id="@+id/btn_desDecrypt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="desDecrypt" />


</LinearLayout>
